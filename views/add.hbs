<h1>Add course</h1>

{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST" class="col s12" novalidate>
    <div class="row">
        <div class="input-field col s8">
            <input name="title" value="{{data.title}}" placeholder="Title" id="title" type="text" class="validate"
                required>
            <label for="title">Course name</label>
            <span class="helper-text" data-error="Enter course name"></span>
        </div>
        <div class="input-field col s8">
            <input name="price" value="{{data.price}}" placeholder="Price" id="price" type="number" class="validate"
                required min="1">
            <label for="price">Price</label>
            <span class="helper-text" data-error="Enter course price"></span>
        </div>
        <div class="input-field col s8">
            <input name="image" value="{{data.image}}" placeholder="Image" id="img" type="text" class="validate"
                required>
            <label for="img">Image url</label>
            <span class="helper-text" data-error="Enter course image"></span>
        </div>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary" type="submit">Add</button>
</form>