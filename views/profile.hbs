<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
        <img class="avatar" src="{{user.avatarUrl}}" alt="avatar-{{user.name}}">
        {{else}}
        <p>No avatar</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Your email: <strong>{{user.email}}</strong></p>
            <div class="input-field col s8">
                <input name="name" value="{{user.name}}" placeholder="Name" id="name" type="text" class="validate"
                    required>
                <label for="name">User name</label>
                <span class="helper-text" data-error="Enter user name"></span>
            </div>
            <div class="file-field input-field col s8">
                <div class="btn btn-small">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <div class="input-field col s8">
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button class="btn btn-primary" type="submit">Edit</button>
            </div>
        </form>
    </div>
</div>